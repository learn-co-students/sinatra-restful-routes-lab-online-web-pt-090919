<h1>Create Your Recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="POST">

    <input id="hidden" type="hidden" name="_method" value="PATCH">
    
    <label for="name">Name</label><br>
    <input id="name" type="text" name="name" value="<%= @recipe.name %>"><br><br>

    <label for="ingredients">Ingredients</label><br>
    <textarea name="ingredients" id="ingredients"><%= @recipe.ingredients %></textarea><br><br>

    <label for="cook_time">Cook Time</label><br>
    <input id="cook_time" type="text" name="cook_time" value="<%= @recipe.cook_time %>"><br><br>

    <button type="submit">Submit</button>

</form>